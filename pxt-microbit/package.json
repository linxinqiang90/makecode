{
  "name": "pxt-microbit",
  "version": "1.2.16",
  "main": "main.js",
  "description": "micro:bit target for Microsoft MakeCode (PXT)",
  "keywords": [
    "JavaScript",
    "education",
    "microbit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/pxt-microbit.git"
  },
  "bin": "./node_modules/pxt/pxt serve",
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/Microsoft/pxt-microbit#readme",
  "files": [
    "/",
    "index.html",
    "main.js",
    "package.json",
    "README.md",
    "pxtarget.json",
    "targetconfig.json",
    "built/*.js",
    "built/*.json",
    "built/*.d.ts",
    "built/hexcache",
    "built/web",
    "sim/public",
    "docs/*.md",
    "docs/*/*.md",
    "docs/*/*/*.md",
    "docs/static/*.svg",
    "docs/static/*.png",
    "docs/static/icons/favicon.ico"
  ],
  "scripts": {
    "start": "node ./node_modules/pxt/pxt serve --just --noBrowser",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "package-test": "node ./node_modules/electron/cli .",
    "package": "node ./node_modules/electron-packager/cli . app --out MakecodeTool --arch=ia32 --app-version 1.0.0 --overwrite --platform=win32 --asar=true"
  },
  "devDependencies": {
    "@types/bluebird": "2.0.33",
    "@types/jquery": "3.2.16",
    "@types/marked": "0.3.0",
    "@types/node": "8.0.53",
    "@types/web-bluetooth": "0.0.4",
    "electron-packager": "^12.2.0",
    "electron-webpack": "^2.6.1",
    "webpack": "^4.26.0",
    "less": "2.7.3",
    "semantic-ui-less": "2.2.14",
    "typescript": "2.6.1"
  },
  "dependencies": {
    "electron": "^3.0.10",
    "acorn": "^6.0.4",
    "execa": "^1.0.0",
    "install": "^0.12.2",
    "log4js": "^3.0.6",
    "npm": "^6.4.1",
    "pxt": "^0.5.1",
    "pxt-common-packages": "0.25.10",
    "pxt-core": "4.4.8"
  },
  "build": {
    "appId": "MakeCode",
    "asar": true,
    "win": {
      "sign": "main.js"
    },
    "files": [
      "/",
      "index.html",
      "main.js",
      "package.json"
    ]
  },
  "webkit": {
    "plugin": true
  }
}
